{{ form_start(form) }}
<div class="row">
    <div class="col-md-4">{{ form_row(form.titre) }}</div>
    <div class="col-md-4">{{ form_row(form.surface) }}</div>
    <div class="col-md-4">{{ form_row(form.prix) }}</div>
</div>
<div class="row">
    <div class="col-md-12">{{ form_row(form.description) }}</div>
</div>
<div class="row">
    <div class="col-md-2">{{ form_row(form.piece) }}</div>
    <div class="col-md-2">{{ form_row(form.chambre) }}</div>
    <div class="col-md-2">{{ form_row(form.chauffage) }}</div>
    <div class="col-md-2">{{ form_row(form.etage) }}</div>
</div>
<div class="row">
    <div class="col-md-5">{{  form_row(form.adresse) }}</div>
    <div class="col-md-3">{{  form_row(form.ville) }}</div>
    <div class="col-md-2">{{  form_row(form.code_postal) }}</div>
</div>
<div class="row">
    <div class="col-md-3">{{  form_row(form.vendu) }}</div>
</div>
<button class="btn btn-primary">{{ button|default('Ajouter') }}</button>
{{ form_end(form) }}